                                <th scope="row">{{ movie.id }}</th>
                                <td>{{ movie.name }}</td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <form action="{{ path('admin_movie_delete', {id: movie.id}) }}" onsubmit="return confirm('Supprimer le film #{{ movie.id }} ?')" method="POST">
                                            <input type="hidden" name="_method" value="DELETE"/>
                                            <input type="hidden" name="token" value="{{ csrf_token('delete-movie') }}"/>
                                            <a class="btn btn-sm btn-primary" href="{{ path('admin_movie_update', {id: movie.id}) }}">Modifier</a>
                                            <button class="btn btn-sm btn-danger" type="submit">Supprimer</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                       {% endfor %}

                    </tbody>
                    </table>
                        <a href="{{ path('admin_movie_read') }}" class="btn btn-block">Voir plus</a>
                </div>
            </div>
        </div>
    </div>

