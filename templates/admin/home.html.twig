{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}


<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-12 col-md-6">
            <div class="card text-dark mb-3">
                <div class="card-header"><h2>Liste des derniers Utilisateurs</h2></div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                        <tbody>

                            {% for user in users %}
                            <tr>
                                <th scope="row">{{ user.id }}</th>
                                    <td>{{ user.email }}</td>
                                    <td class="text-right">
                                         <div class="btn-group">
                                            <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Etes vous sûr de vouloir supprimer cet utilisateur');">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <a class="btn btn-sm btn-primary" href="{{ path('admin_user_update', {'id': user.id}) }}">modifier</a>
                                                <button class="btn btn-sm btn-danger">Supprimer</button>
                                            </form>
                                        </div>
                                    </td>
                            </tr>                              
                            {% endfor %}  

                        </tbody>
                        </table>
                            <a href="{{ path('admin_user_read') }}" class="btn btn-block">Voir plus</a>
                    </div>
                </div>
            </div>

    <div class="col-12 col-md-6">
        <div class="card text-dark mb-3">
            <div class="card-header"><h2>Liste des derniers Films</h2></div>
                <div class="card-body">
                    <table class="table table-hover">
