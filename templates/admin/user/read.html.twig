{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

<h1>Liste des Utilisateurs</h1>

<table class="table table-striped">
  {# En-tÃªtes #}
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Email</th>
      <th scope="col">Nickname</th>
      <th scope="col">CreatedAt</th>
    </tr>
  </thead>
  <tbody>

    {# Film #}
    {% for user in users %}
    <tr>
      <th scope="row">{{ user.id }}</th>
      <td>{{ user.email }}</td>
      <td>{{ user.nickname }}</td>
      <td>{{ user.createdAt|date('d-m-Y') }}</td>
      <td><form action="" onsubmit="return confirm('Supprimer l'Utilisateur #{{ user.id }} ?')" method="POST">
        {# Fake HTTP Method, see https://symfony.com/doc/current/routing.html#matching-http-methods #}
        <input type="hidden" name="_method" value="DELETE"/>
        {# CSRF Token manuel see https://symfony.com/doc/current/security/csrf.html#generating-and-checking-csrf-tokens-manually #}
        <input type="hidden" name="token" value=""/>
        <a class="btn btn-sm btn-primary" href="">Modifier</a>
        <button class="btn btn-sm btn-danger" type="submit">Supprimer</button>
      </form></td>
    </tr>
    {% endfor %}

  </tbody>
</table>

{% endblock %}
