{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

<h1>Liste des Utilisateurs</h1>

<p><a href="{{ path('back_user_add') }}" class="btn btn-success">Ajouter un Utilisateur</a></p>

<table class="table table-striped">
  {# En-tÃªtes #}
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Email</th>
      <th scope="col">Nickname</th>
      <th scope="col">CreatedAt</th>
    </tr>
  </thead>
  <tbody>

    {# Film #}
    {% for user in users %}
    <tr>
      <th scope="row">{{ user.id }}</th>
      <td>{{ user.email }}</td>
      <td>{{ user.nickname }}</td>
      <td>{{ user.createdAt|date('d-m-Y') }}</td>
     <td><form method="post" action="{{ path('back_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-sm btn-danger">Supprimer</button>
    <a class="btn btn-sm btn-primary" href="{{ path('back_user_edit', {id: user.id}) }}">Modifier</a>
    </form></td>
    {% endfor %}

  </tbody>
</table>

{% endblock %}
